---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

// --- 数据准备 ---

// 1. 获取所有展品
const allExhibits = await Astro.glob('../content/exhibits/*.md');

// 2. 按日期对所有展品进行排序
allExhibits.sort((a, b) => new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime());

// 3. 只取出最新的3个展品，用于“最新更新”部分
const latestExhibits = allExhibits.slice(0, 3);

// --- 页面渲染 ---
---
<Layout title="寂静画廊 - 首页">
  
  <!-- 第一部分：最新更新 -->
  <section class="latest-section">
    <h2 class="section-title">最新展品</h2>
    <div class="card-grid">
      {latestExhibits.map((exhibit) => <Card frontmatter={exhibit.frontmatter} file={exhibit.file} />)}
    </div>
  </section>

  <!-- 分割线 -->
  <hr class="section-divider" />

  <!-- 第二部分：特展入口 -->
  <section class="specials-section">
    <h2 class="section-title">特展收藏</h2>
    <div class="special-list">
      <a href="/specials/monthly-finds" class="special-card">
        <h3>月度新发现</h3>
        <p>追踪策展人最新发现的、充满时效性的展品清单。</p>
      </a>
      <a href="/specials/pantheon-movies" class="special-card">
        <h3>电影封神榜</h3>
        <p>那些经过时间考验的、定义了本画廊审美基石的影像作品。</p>
      </a>
      <!-- 未来你可以继续在这里添加新的特展链接 -->
    </div>
    <!-- 
      我们已经将这个链接的功能，统一到了顶部的导航栏中。
      因此，这里底部的链接将被移除，以保持设计的简洁和逻辑的清晰。
    -->
  </section>

</Layout>

<style>
  /* 通用样式 */
  .section-title {
    font-size: 2rem;
    text-align: center;
    margin-bottom: 2rem;
    font-family: var(--font-serif);
  }

  .section-divider {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 4rem auto;
    width: 50%;
  }

  /* 最新展品部分样式 */
  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  /* 特展部分样式 */
  .special-list {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 640px) {
    .special-list {
      grid-template-columns: 1fr 1fr;
    }
  }

  .special-card {
    display: block;
    background-color: white;
    border: 1px solid var(--color-border);
    padding: 2rem;
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
  }

  .special-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
  }

  .special-card h3 {
    margin: 0 0 0.5rem 0;
    color: var(--color-accent);
    font-family: var(--font-serif);
  }

  .special-card p {
    margin: 0;
    color: #666;
    font-size: 0.95rem;
  }
  
